@using System.Security.Principal
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <span class="navbar-text">Hello @User.Identity.Name</span>    
        <a asp-area="" asp-controller="Account" asp-action="SignOut">Sign out</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="SignIn"> Sign in</a>
    }
    
</ul>